#!/usr/bin/env node

'use strict';

const Logger = require('#self/lib/logger');
const { config } = require('#self/config');
const { ControlPanel } = require('#self/control_panel/index');

(async function() {
  Logger.setSink(Logger.getPrettySink('control_panel.log'));

  const controlPanel = new ControlPanel(config);
  await controlPanel.ready();

  const onSignal = async () => {
    await controlPanel.close();
    process.exit(0);
  };

  process.on('SIGINT', onSignal);
  process.on('SIGTERM', onSignal);
})().catch(err => {
  console.error(err);
  process.exit(1);
});
